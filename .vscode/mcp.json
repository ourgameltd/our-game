{
	"servers": {
		"ado": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@azure-devops/mcp@next",
				"bandce"
			]
		},
		"microsoftdocs/mcp": {
			"type": "http",
			"url": "https://learn.microsoft.com/api/mcp"
		},
		"context7": {
			"type": "http",
			"url": "https://mcp.context7.com/mcp",
			"headers": {
				"CONTEXT7_API_KEY": "${input:context7_input}"
			}
		}
	},
	"inputs": [
		{
			"id": "context7_input",
			"type": "promptString",
			"description": "Enter a string input",
			"password": true
		}
	]
}